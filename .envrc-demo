# Copy this demo file to .envrc and install direnv
# See: https://direnv.net/
#
# Use this for saving environment variables.
# Ofcourse it is optional, you can just set environment variables yourself,
# but this unclutters it for you.
#
# DO NOT COMMIT the .envrc file!

# Global variables
export REPO_ROOT=$(git rev-parse --show-toplevel)
export MY_IP=$(curl https://api.myip.com | jq -r .'ip')
export DEVELOPER_EMAIL="your@email.com"

# AWS Accounts
export QA_ACCOUNT_ID=""
export PROD_ACCOUNT_ID=""
export MASTER_ACCOUNT_ID=""
export SSO_ADMINISTRATORS_GROUP_ID=""
export SSO_DEVELOPERS_GROUP_ID=""

# All development must be in us-east-1
export AWS_REGION="us-east-1"
